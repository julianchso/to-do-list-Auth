            {{/if}}
            <span class="fa fa-trash delete-todo"></span>
          {{/each}}
          </li>
        </ul>
      </div> --}}

      <h2 class="main-font center">Left to do: <%= left %></h2>
    </div>
    <script type="text/javascript" src="/js/main.js"></script>
  </body>
</html>
